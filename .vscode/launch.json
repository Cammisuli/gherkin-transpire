    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Spec creation",
            "program": "${workspaceFolder}/src/index.ts",
            "args": [
                "-w",
                "sample/features/*.feature",
                "sample/steps/**/*.js", 
                "sample/specs/",
                "-v"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Steps creation",
            "program": "${workspaceFolder}/src/index.ts",
            "args": [
                "--steps",
                "sample/features/common/reusableScenarios.feature",
                "sample/steps/steps.js", 
                "sample/steps/",
                "-v",
                "-w"              
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}